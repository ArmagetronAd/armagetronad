define(TABLE,<table $2>$1</table>)
define(THEAD,<th [$2]>[$1]</th>)
define(TROW,<tr [$2]>[$1]</tr>)
define(TDAT,<td [$2]>[$1]</td>)
define(TROW1,<tr $2>TDAT($1,$3)</tr>)
